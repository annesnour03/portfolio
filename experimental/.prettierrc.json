{
  "semi": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "importOrder": [
    "react",
    "",
    "<THIRD_PARTY_MODULES>",
    "^components/(.*)$",
    "^[./]",
    "^(?!.*[.]css$)[./].*$",
    ".css$",
    "react-ace",
    "ace-*"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
